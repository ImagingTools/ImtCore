schema {
	query: Query
	namespace: imtauth
	version: 1.0
}

import {
	"../../../../ImtCore/Sdl/imtbase/1.0/ImtCollection.sdl"
}

input GetUserActionsInput {
	productId: ID
	viewParams: CollectionViewParams
}

type UserActionItemData {
	id: ID!
	typeId: ID!
	userLink: ObjectLink
	targetTypeLink: ObjectLink
	targetLink: ObjectLink
	actionType: String
	timeStamp: String
}

type GetUserActionsPayload {
	items: [UserActionItemData]
	notification: NotificationItem
}

type Query {
	GetUserActions (input:GetUserActionsInput): GetUserActionsPayload!
}

collectionSchema {
	type UserAction {
		ref: UserActionItemData
		operations {
				list: GetUserActions
		}
	}
}


